   "source": [
    "# 公斤轉換為磅\n",
    "KILLO_TO_POUND = 2.20426 \n",
    "kilograms = float(input(\"請輸入公斤：\"))\n",
    "pounds = KILLO_TO_POUND * kilograms\n",
    "print(f'{kilograms} 公斤 = {pounds:.2f} 磅')\n",
    "\n",
    "# 磅轉換為公斤\n",
    "pounds = float(input(\"請輸入磅：\"))\n",
    "kilograms = pounds / KILLO_TO_POUND\n",
    "print(f'{pounds} 磅 = {kilograms:.2f} 公斤')"
   ]
  }
